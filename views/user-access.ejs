<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Access</title>
    <link rel="stylesheet" href="/public/user-login.css" />

    <style>
      .container {
        width: 300px;
        margin: 0 auto;
        padding: 20px;
        text-align: center;
        border: 1px solid #ccc;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #f9f9f9;
      }

      h1 {
        margin-bottom: 20px;
        font-size: 24px;
        color: #333;
      }

      #uniqueCodeField {
        margin-bottom: 20px;
      }

      .number-buttons {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 10px;
        margin-bottom: 10px;
      }

      .number-btn,
      .clear-btn {
        padding: 10px;
        font-size: 18px;
        cursor: pointer;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
      }

      .number-btn:hover,
      .clear-btn:hover {
        background-color: #0056b3;
      }

      #uniqueCode {
        width: calc(100% - 22px);
        padding: 10px;
        font-size: 18px;
        text-align: center;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f0f0f0;
      }

      .btn {
        padding: 10px 20px;
        font-size: 18px;
        background-color: #28a745;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }

      .btn:hover {
        background-color: #218838;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>User Login</h1>
      <form id="userLoginForm" method="post" action="/user/access">
        <div id="uniqueCodeField">
          <label for="uniqueCode">Unique Code:</label>
          <div id="number-buttons" class="number-buttons">
            <!-- Number buttons for uniqueCode input -->
            <button type="button" class="number-btn" data-value="1">1</button>
            <button type="button" class="number-btn" data-value="2">2</button>
            <button type="button" class="number-btn" data-value="3">3</button>
            <button type="button" class="number-btn" data-value="4">4</button>
            <button type="button" class="number-btn" data-value="5">5</button>
            <button type="button" class="number-btn" data-value="6">6</button>
            <button type="button" class="number-btn" data-value="7">7</button>
            <button type="button" class="number-btn" data-value="8">8</button>
            <button type="button" class="number-btn" data-value="9">9</button>
            <button type="button" class="number-btn" data-value="0">0</button>
            <button type="button" class="clear-btn">C</button>
          </div>
          <input
            type="text"
            id="uniqueCode"
            name="uniqueCode"
            readonly
            placeholder="Enter unique code"
          />
        </div>
        <button type="submit" class="btn">Submit</button>
      </form>
      <a href="/"><button type="button" class="clear-btn">बाहर जाये</button></a>
    </div>
    <script src="/login.js" defer></script>
  </body>
</html>
